  },
  "bugs": {
    "url": "https://github.com/wiltark/veko.js/issues"
  },
  "homepage": "https://veko.js.org",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "ws": "^8.14.2",
    "chokidar": "^3.5.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "validator": "^13.11.0",
    "bcryptjs": "^2.4.3",
