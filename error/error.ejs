<!DOCTYPE html>
<html lang="<%= locals.lang || 'en' %>" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= (locals.lang === 'fr' ? 'Erreur' : 'Error') %> <%= status || 500 %> | Veko.js</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        
        :root {
            --bg-primary: #0a0a0f;
            --bg-secondary: #12121a;
            --bg-tertiary: #1a1a25;
            --bg-code: #0d0d14;
            --text-primary: #f4f4f5;
            --text-secondary: #a1a1aa;
            --text-muted: #71717a;
            --border: #27272a;
            --accent-red: #ef4444;
            --accent-orange: #f97316;
            --accent-yellow: #eab308;
            --accent-green: #22c55e;
            --accent-blue: #3b82f6;
            --accent-purple: #a855f7;
            --accent-pink: #ec4899;
            --glow-red: rgba(239, 68, 68, 0.15);
            --glow-purple: rgba(168, 85, 247, 0.1);
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            min-height: 100vh;
            line-height: 1.6;
            overflow-x: hidden;
        }
        
        /* Animated background */
        .bg-pattern {
            position: fixed;
            inset: 0;
            z-index: 0;
            overflow: hidden;
            pointer-events: none;
        }
        
        .bg-pattern::before {
            content: '';
            position: absolute;
            inset: 0;
            background: 
                radial-gradient(ellipse 80% 50% at 50% -20%, var(--glow-purple), transparent),
                radial-gradient(ellipse 60% 40% at 80% 50%, var(--glow-red), transparent);
        }
        
        .grid-overlay {
            position: absolute;
            inset: 0;
            background-image: 
                linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
            background-size: 60px 60px;
            mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
        }
        
        .container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 2rem;
            border-bottom: 1px solid var(--border);
            margin-bottom: 2rem;
        }
        
        .logo {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .logo-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-pink));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 4px 20px rgba(168, 85, 247, 0.3);
        }
        
        .logo-text h1 {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .logo-text span {
            font-size: 0.75rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }
        
        .header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .lang-switcher {
            display: flex;
            background: var(--bg-tertiary);
            border-radius: 8px;
            overflow: hidden;
            border: 1px solid var(--border);
        }
        
        .lang-btn {
            padding: 0.5rem 1rem;
            font-size: 0.75rem;
            font-weight: 500;
            background: transparent;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .lang-btn:hover { color: var(--text-primary); }
        .lang-btn.active {
            background: var(--accent-purple);
            color: white;
        }
        
        .status-badge {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--glow-red);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 100px;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--accent-red);
        }
        
        .status-dot {
            width: 8px;
            height: 8px;
            background: var(--accent-red);
            border-radius: 50%;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(0.9); }
        }
        
        /* Main content */
        .main { flex: 1; }
        
        /* Error Hero */
        .error-hero {
            text-align: center;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        
        .error-code {
            font-size: clamp(6rem, 15vw, 12rem);
            font-weight: 800;
            line-height: 1;
            background: linear-gradient(135deg, var(--accent-red), var(--accent-orange), var(--accent-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 100px rgba(239, 68, 68, 0.3);
            animation: float 4s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .error-title {
            font-size: 1.75rem;
            font-weight: 600;
            margin: 1rem 0 0.5rem;
            color: var(--text-primary);
        }
        
        .error-message {
            font-size: 1.125rem;
            color: var(--text-secondary);
            max-width: 600px;
            margin: 0 auto;
        }
        
        /* Action buttons */
        .actions {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }
        
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.5rem;
            font-size: 0.9375rem;
            font-weight: 500;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--accent-purple), var(--accent-blue));
            color: white;
            box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(139, 92, 246, 0.4);
        }
        
        .btn-secondary {
            background: var(--bg-tertiary);
            color: var(--text-primary);
            border: 1px solid var(--border);
        }
        
        .btn-secondary:hover {
            background: var(--bg-secondary);
            border-color: var(--accent-purple);
        }
        
        .btn svg {
            width: 18px;
            height: 18px;
        }
        
        /* Cards */
        .card {
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border);
            background: var(--bg-tertiary);
        }
        
        .card-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9375rem;
            font-weight: 600;
        }
        
        .card-title svg {
            width: 20px;
            height: 20px;
            color: var(--accent-purple);
        }
        
        .card-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.75rem;
            background: rgba(139, 92, 246, 0.1);
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 100px;
            color: var(--accent-purple);
        }
        
        .card-body { padding: 1.5rem; }
        
        /* Code block */
        .code-block {
            background: var(--bg-code);
            border-radius: 12px;
            overflow: hidden;
            font-family: 'Fira Code', monospace;
            font-size: 0.875rem;
        }
        
        .code-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            background: rgba(255,255,255,0.02);
            border-bottom: 1px solid var(--border);
        }
        
        .code-file {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-muted);
            font-size: 0.8125rem;
        }
        
        .code-file svg {
            width: 16px;
            height: 16px;
        }
        
        .code-content {
            overflow-x: auto;
            padding: 1rem 0;
        }
        
        .code-line {
            display: flex;
            padding: 0.125rem 0;
            transition: background 0.15s;
        }
        
        .code-line:hover { background: rgba(255,255,255,0.02); }
        
        .code-line.error-line {
            background: linear-gradient(90deg, rgba(239, 68, 68, 0.15), transparent);
            border-left: 3px solid var(--accent-red);
        }
        
        .line-number {
            min-width: 50px;
            padding: 0 1rem;
            text-align: right;
            color: var(--text-muted);
            user-select: none;
            border-right: 1px solid var(--border);
        }
        
        .line-content {
            padding: 0 1rem;
            flex: 1;
            white-space: pre;
        }
        
        .error-pointer {
            display: flex;
            padding-left: 50px;
            margin-left: 3px;
            border-left: 1px solid var(--border);
        }
        
        .error-pointer-content {
            padding: 0.25rem 1rem;
            color: var(--accent-red);
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .error-pointer-content svg {
            width: 16px;
            height: 16px;
            flex-shrink: 0;
            margin-top: 2px;
        }
        
        /* Syntax highlighting */
        .syn-keyword { color: #c792ea; }
        .syn-string { color: #c3e88d; }
        .syn-number { color: #f78c6c; }
        .syn-comment { color: #546e7a; font-style: italic; }
        .syn-tag { color: #89ddff; }
        .syn-attr { color: #ffcb6b; }
        .syn-ejs { color: #f07178; background: rgba(240, 113, 120, 0.1); border-radius: 3px; padding: 0 2px; }
        
        /* Stack trace */
        .stack-trace {
            padding: 1rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.8125rem;
            color: var(--text-secondary);
            line-height: 1.8;
            overflow-x: auto;
            white-space: pre-wrap;
            word-break: break-all;
        }
        
        .stack-line { color: var(--text-muted); }
        .stack-file { color: var(--accent-blue); }
        .stack-method { color: var(--accent-yellow); }
        
        /* Environment info */
        .env-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }
        
        .env-item {
            background: var(--bg-tertiary);
            border-radius: 12px;
            padding: 1rem 1.25rem;
            border: 1px solid var(--border);
        }
        
        .env-label {
            font-size: 0.75rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
        }
        
        .env-value {
            font-family: 'Fira Code', monospace;
            font-size: 0.875rem;
            color: var(--text-primary);
        }
        
        /* Solutions */
        .solutions-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .solution-item {
            display: flex;
            gap: 1rem;
            padding: 1rem 1.25rem;
            background: var(--bg-tertiary);
            border-radius: 12px;
            border: 1px solid var(--border);
            transition: all 0.2s;
        }
        
        .solution-item:hover {
            border-color: var(--accent-purple);
            transform: translateX(4px);
        }
        
        .solution-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(236, 72, 153, 0.1));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .solution-icon svg {
            width: 20px;
            height: 20px;
            color: var(--accent-purple);
        }
        
        .solution-content h4 {
            font-size: 0.9375rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }
        
        .solution-content p {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }
        
        .solution-code {
            margin-top: 0.75rem;
            padding: 0.75rem 1rem;
            background: var(--bg-code);
            border-radius: 8px;
            font-family: 'Fira Code', monospace;
            font-size: 0.8125rem;
            color: var(--accent-green);
        }
        
        /* Footer */
        .footer {
            text-align: center;
            padding: 2rem 0;
            margin-top: 2rem;
            border-top: 1px solid var(--border);
        }
        
        .footer-text {
            font-size: 0.875rem;
            color: var(--text-muted);
        }
        
        .footer-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-left: 0.5rem;
            padding: 0.25rem 0.75rem;
            background: var(--bg-tertiary);
            border-radius: 100px;
            font-size: 0.75rem;
        }
        
        .footer-tip {
            margin-top: 0.75rem;
            font-size: 0.75rem;
            color: var(--text-muted);
        }
        
        .footer-tip code {
            padding: 0.125rem 0.5rem;
            background: var(--bg-tertiary);
            border-radius: 4px;
            font-family: 'Fira Code', monospace;
        }
        
        /* Toast notifications */
        .toast-container {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        
        .toast {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.25rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.4);
            animation: slideIn 0.3s ease;
        }
        
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        
        .toast-icon {
            width: 24px;
            height: 24px;
        }
        
        .toast-message { font-size: 0.875rem; }
        
        .toast-close {
            margin-left: auto;
            padding: 0.25rem;
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
        }
        
        .toast-close:hover { color: var(--text-primary); }
        
        /* Responsive */
        @media (max-width: 768px) {
            .header { flex-direction: column; gap: 1rem; }
            .error-code { font-size: 5rem; }
            .actions { flex-direction: column; }
            .btn { width: 100%; justify-content: center; }
        }
    </style>
</head>

<body>
    <!-- Background pattern -->
    <div class="bg-pattern">
        <div class="grid-overlay"></div>
    </div>
    
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <div class="logo-icon">⚡</div>
                <div class="logo-text">
                    <h1>Veko.js</h1>
                    <span><%= locals.lang === 'fr' ? 'Framework Web' : 'Web Framework' %></span>
                </div>
            </div>
            
            <div class="header-actions">
                <div class="lang-switcher">
                    <button onclick="changeLanguage('en')" class="lang-btn <%= locals.lang !== 'fr' ? 'active' : '' %>">EN</button>
                    <button onclick="changeLanguage('fr')" class="lang-btn <%= locals.lang === 'fr' ? 'active' : '' %>">FR</button>
                </div>
                
                <div class="status-badge">
                    <span class="status-dot"></span>
                    <span><%= locals.lang === 'fr' ? 'Erreur' : 'Error' %> <%= status || 500 %></span>
                </div>
            </div>
        </header>
        
        <!-- Main -->
        <main class="main">
            <!-- Error Hero -->
            <section class="error-hero">
                <div class="error-code"><%= status || 500 %></div>
                <h2 class="error-title">
                    <%= locals.lang === 'fr' ? (errorTypeName?.fr || 'Erreur Serveur') : (errorTypeName?.en || 'Server Error') %>
                </h2>
                <p class="error-message">
                    <%= message || (locals.lang === 'fr' ? 'Une erreur inattendue s\'est produite' : 'An unexpected error occurred') %>
                </p>
                
                <div class="actions">
                    <button onclick="window.history.back()" class="btn btn-primary">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Retour' : 'Go Back' %>
                    </button>
                    <button onclick="window.location.reload()" class="btn btn-secondary">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Réessayer' : 'Retry' %>
                    </button>
                    <a href="/" class="btn btn-secondary">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Accueil' : 'Home' %>
                    </a>
                </div>
            </section>
            
            <% if (diagnostics && diagnostics.codeContext) { %>
            <!-- Source Code -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Source de l\'erreur' : 'Error Source' %>
                    </div>
                    <span class="card-badge">
                        <%= locals.lang === 'fr' ? 'Ligne' : 'Line' %> <%= diagnostics.codeContext.line %>:<%= diagnostics.codeContext.column %>
                    </span>
                </div>
                
                <div class="code-block">
                    <div class="code-header">
                        <div class="code-file">
                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <%= diagnostics.codeContext.file %>
                        </div>
                    </div>
                    
                    <div class="code-content">
                        <% diagnostics.codeContext.codeLines.forEach(line => { %>
                        <div class="code-line <%= line.isError ? 'error-line' : '' %>">
                            <span class="line-number"><%= line.number %></span>
                            <span class="line-content"><% if (line.content.includes('<') && line.content.includes('>')) { %><%- highlightHtml(line.content, line.isError ? line.highlightColumn : null) %><% } else { %><%= escapeHtml(line.content) %><% } %></span>
                        </div>
                        <% if (line.isError) { %>
                        <div class="error-pointer">
                            <div class="error-pointer-content">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                                <span><%= message %></span>
                            </div>
                        </div>
                        <% } %>
                        <% }); %>
                    </div>
                </div>
            </div>
            <% } %>
            
            <% if (showStack && error && error.stack) { %>
            <!-- Stack Trace -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        Stack Trace
                    </div>
                </div>
                <pre class="stack-trace"><%= error.stack %></pre>
            </div>
            <% } %>
            
            <% if (diagnostics && diagnostics.platform) { %>
            <!-- Environment -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Environnement' : 'Environment' %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="env-grid">
                        <div class="env-item">
                            <div class="env-label">Node.js</div>
                            <div class="env-value"><%= diagnostics.platform.node %></div>
                        </div>
                        <div class="env-item">
                            <div class="env-label"><%= locals.lang === 'fr' ? 'Système' : 'System' %></div>
                            <div class="env-value"><%= diagnostics.platform.os %></div>
                        </div>
                        <div class="env-item">
                            <div class="env-label">Timestamp</div>
                            <div class="env-value"><%= diagnostics.timestamp %></div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            
            <!-- Solutions -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                        </svg>
                        <%= locals.lang === 'fr' ? 'Solutions possibles' : 'Possible Solutions' %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="solutions-list">
                        <% if (status === 404) { %>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Vérifier l\'URL' : 'Check the URL' %></h4>
                                <p><%= locals.lang === 'fr' ? 'Assurez-vous que l\'URL est correcte et existe.' : 'Make sure the URL is correct and exists.' %></p>
                            </div>
                        </div>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Définir la route' : 'Define the route' %></h4>
                                <p><%= locals.lang === 'fr' ? 'Ajoutez la route dans votre application.' : 'Add the route in your application.' %></p>
                                <div class="solution-code">app.createRoute('GET', '/path', handler);</div>
                            </div>
                        </div>
                        <% } else if (status === 500) { %>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Vérifier le code' : 'Check your code' %></h4>
                                <p><%= locals.lang === 'fr' ? 'Consultez la stack trace pour identifier le problème.' : 'Check the stack trace to identify the issue.' %></p>
                            </div>
                        </div>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Réinstaller les dépendances' : 'Reinstall dependencies' %></h4>
                                <p><%= locals.lang === 'fr' ? 'Une dépendance corrompue peut causer ce problème.' : 'A corrupted dependency might cause this issue.' %></p>
                                <div class="solution-code">npm install</div>
                            </div>
                        </div>
                        <% } else { %>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Consulter la documentation' : 'Check documentation' %></h4>
                                <p><%= locals.lang === 'fr' ? 'La documentation Veko.js contient des guides de dépannage.' : 'Veko.js documentation contains troubleshooting guides.' %></p>
                            </div>
                        </div>
                        <% } %>
                        <div class="solution-item">
                            <div class="solution-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h4><%= locals.lang === 'fr' ? 'Redémarrer le serveur' : 'Restart the server' %></h4>
                                <p><%= locals.lang === 'fr' ? 'Un redémarrage peut parfois résoudre le problème.' : 'A restart can sometimes fix the issue.' %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="footer">
            <p class="footer-text">
                Veko.js Framework
                <span class="footer-badge">
                    <span style="width:6px;height:6px;background:<%= env === 'development' ? 'var(--accent-green)' : 'var(--accent-blue)' %>;border-radius:50%"></span>
                    <%= env %>
                </span>
            </p>
            <p class="footer-tip">
                <%= locals.lang === 'fr' ? 'Désactiver en production :' : 'Disable in production:' %>
                <code>NODE_ENV=production</code>
            </p>
        </footer>
    </div>
    
    <!-- Toast container -->
    <div id="toast-container" class="toast-container"></div>
    
    <script>
        // Language switcher
        function changeLanguage(lang) {
            const url = new URL(window.location.href);
            url.searchParams.set('lang', lang);
            window.location.href = url.toString();
        }
        
        // Toast notifications
        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const colors = {
                info: '#3b82f6',
                success: '#22c55e',
                warning: '#eab308',
                error: '#ef4444'
            };
            
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.style.borderLeftColor = colors[type];
            toast.style.borderLeftWidth = '3px';
            toast.innerHTML = `
                <svg class="toast-icon" fill="none" viewBox="0 0 24 24" stroke="${colors[type]}">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="toast-message">${message}</span>
                <button class="toast-close" onclick="this.parentElement.remove()">
                    <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            `;
            
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 5000);
        }
        
        // Copy code to clipboard
        function copyCode(element) {
            const code = element.textContent;
            navigator.clipboard.writeText(code).then(() => {
                showToast('Code copied!', 'success');
            });
        }
    </script>
    
    <%- locals.reloadScript || '' %>
</body>
</html>